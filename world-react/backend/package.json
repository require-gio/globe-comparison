{
  "name": "globe-backend",
  "version": "1.0.0",
  "description": "Backend API for 3D Interactive Globe",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "migrate": "tsx src/db/migrations/index.ts",
    "migrate:rollback": "tsx src/db/migrations/rollback.ts",
    "seed": "tsx src/db/seed.ts"
  },
  "keywords": ["fastify", "globe", "api", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "fastify": "^4.28.1",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "dotenv": "^16.4.5",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  }
}
